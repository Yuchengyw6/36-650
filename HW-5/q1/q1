#1
def transpose(matrix):
    m = len(matrix[0])
    n = len(matrix)
    matrixtmp = [[] for k in range(m)]
    for i in range(m):
        for j in range(n):
            matrixtmp[i].append(matrix[j][i])
    return matrixtmp
X = [[10,8],
    [2 ,4],
    [1 ,7]]
print(transpose(X))
print(transpose(X)[0])
print(transpose(X)[1])